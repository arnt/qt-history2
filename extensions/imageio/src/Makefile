# Makefile for building qimgio
# Generated by tmake at 19:50, 1997/06/24
#     Project: qimageio.pro
#    Template: /home/warwick/tmake/lib/linux-gcc/lib.t
#############################################################################

####### Compiler, tools and options

CC	=	gcc
CFLAGS	=	-Wall -W -O2 -fno-strength-reduce -fPIC
INCPATH	=	-I$(QTDIR)/include
LINK	=	gcc
LFLAGS	=	-shared -Wl,-soname,libqimgio.so
LIBS	=	-L$(QTDIR)/lib -lqt -L/usr/X11R6/lib -lX11 -ljpeg -lpng -lz
MOC	=	moc
AR	=	ar cq
RANLIB	=	ranlib

####### Files

HEADERS =	qimageio.h \
		qjpegio.h \
		qpngio.h
SOURCES =	qimageio.cpp \
		qjpegio.cpp \
		qpngio.cpp
OBJECTS =	qimageio.o \
		qjpegio.o \
		qpngio.o
SRCMOC	=	
OBJMOC	=	
TARGET	=	qimgio
TARGETA	=	libqimgio.a
TARGETD	=	libqimgio.so.0.1
TARGET0	=	libqimgio.so
TARGET1	=	libqimgio.so.0

####### Implicit rules

.SUFFIXES: .cpp .c .C

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: sharedlib 

sharedlib: $(TARGETD)

install: sharedlib
	cp -f -d $(TARGET0) $(TARGET1) $(TARGETD) $(QTDIR)/lib
	SDIR=$$PWD; cd $(QTDIR)/include; \
	for i in $(HEADERS); \
	do \
	    ln -f -s $$SDIR/$$i .; \
	done

$(TARGETD): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGETD) $(TARGET0) $(TARGET1)
	$(LINK) $(LFLAGS) -o $(TARGETD) $(OBJECTS) $(OBJMOC) $(LIBS)
	-ln -s $(TARGETD) $(TARGET0)
	-ln -s $(TARGETD) $(TARGET1)

staticlib: $(TARGETA)

$(TARGETA): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGETA)
	$(AR) $(TARGETA) $(OBJECTS) $(OBJMOC)
	ranlib $(TARGETA)

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC)
	-rm -f $(TARGETA) $(TARGETD) $(TARGET0) $(TARGET1)
	-rm -f *~ core

####### Compile

qimageio.o: qimageio.cpp \
		qjpegio.h \
		qpngio.h

qjpegio.o: qjpegio.cpp

qpngio.o: qpngio.cpp
