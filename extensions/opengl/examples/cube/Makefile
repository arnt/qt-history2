####### Compiler, tools and options

CC	=	gcc
CFLAGS	=	-Wall -W -O1
INCPATH	=	-I$(QTDIR)/include -I/usr/X11R6/include
LINK	=	gcc
LFLAGS	=	
LIBS	=	-L$(QTDIR)/lib -lqgl -lqt -L/usr/X11R6/lib -lMesaGL -lMesaGLU -lXext -lm -lX11
MOC	=	moc

####### Files

HEADERS =	glcube.h \
		globjwin.h
SOURCES =	glcube.cpp \
		globjwin.cpp \
		main.cpp
OBJECTS =	glcube.o \
		globjwin.o \
		main.o
SRCMOC	=	moc_glcube.cpp \
		moc_globjwin.cpp
OBJMOC	=	moc_glcube.o \
		moc_globjwin.o
TARGET	=	cube

####### Implicit rules

.SUFFIXES: .cpp .c .C

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGET) 

$(TARGET): $(OBJECTS) $(OBJMOC)
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~

####### Compile

glcube.o: glcube.cpp glcube.h

globjwin.o: globjwin.cpp globjwin.h glcube.h

main.o: main.cpp globjwin.h

moc_glcube.o: moc_glcube.cpp glcube.h

moc_globjwin.o: moc_globjwin.cpp globjwin.h

moc_glcube.cpp: glcube.h
	$(MOC) glcube.h -o moc_glcube.cpp

moc_globjwin.cpp: globjwin.h
	$(MOC) globjwin.h -o moc_globjwin.cpp

