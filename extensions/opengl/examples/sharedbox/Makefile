####### Compiler, tools and options

CC	=	gcc
CFLAGS	=	-Wall -W -g
INCPATH	=	-I$(QTDIR)/include -I/usr/X11R6/include
LINK	=	gcc
LFLAGS	=	
LIBS	=	-L$(QTDIR)/lib -lqgl -lqt -L/usr/X11R6/lib -lMesaGL -lMesaGLU -lXmu -lXext -lm -lX11
MOC	=	moc

####### Files

HEADERS =	glbox.h \
		globjwin.h
SOURCES =	glbox.cpp \
		globjwin.cpp \
		main.cpp
OBJECTS =	glbox.o \
		globjwin.o \
		main.o
SRCMOC	=	moc_glbox.cpp \
		moc_globjwin.cpp
OBJMOC	=	moc_glbox.o \
		moc_globjwin.o
TARGET	=	sharedbox

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake: Makefile

Makefile: sharedbox.pro
	tmake sharedbox.pro -o Makefile

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~ core

####### Compile

glbox.o: glbox.cpp \
		glbox.h

globjwin.o: globjwin.cpp \
		globjwin.h \
		glbox.h

main.o: main.cpp \
		globjwin.h

moc_glbox.o: moc_glbox.cpp \
		glbox.h

moc_globjwin.o: moc_globjwin.cpp \
		globjwin.h

moc_glbox.cpp: glbox.h
	$(MOC) glbox.h -o moc_glbox.cpp

moc_globjwin.cpp: globjwin.h
	$(MOC) globjwin.h -o moc_globjwin.cpp

