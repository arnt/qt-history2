####### Build rules

all: $(TARGET)

sharedlib: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGET) $(TARGET0) $(TARGET1)
	$(LINK) $(LFLAGS) -o $(TARGETD) $(OBJECTS) $(OBJMOC) $(LIBS)
	-ln -s $(TARGET) $(TARGET0)
	-ln -s $(TARGET) $(TARGET1)

staticlib: $(TARGETA)

$(TARGETA): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGETA)
	$(AR) $(TARGETA) $(OBJECTS) $(OBJMOC)
	ranlib $(TARGETA)

tmake: Makefile

Makefile: nsplugin.pro
	tmake nsplugin.pro -o Makefile

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC)
	-rm -f $(TARGETA) $(TARGETD) $(TARGET0) $(TARGET1)
	-rm -f *~ core

