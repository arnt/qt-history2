####### Compiler, tools and options

CC	=	gcc
CFLAGS	=	-DPNG_SUPPORT -Wall -W -O2 -fno-strength-reduce -fPIC
INCPATH	=	-I$(QTDIR)/include
LINK	=	gcc
LFLAGS	=	-shared -Wl,-soname,$(TARGETD)
LIBS	=	-L$(QTDIR)/lib -L/usr/X11/lib -lqnp -lqimgio -lqt -lXt -lX11 -lm
MOC	=	moc

####### Files

HEADERS =	
SOURCES =	qtimage.cpp 
OBJECTS =	qtimage.o
SRCMOC	=	
OBJMOC	=	
TARGETD	=	qtimage.so

####### Implicit rules

.SUFFIXES: .cpp .c .C

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGETD) 

install: $(TARGETD)
	cp -f $(TARGETD) $(HOME)/.netscape/plugins/$(TARGETD)

test: $(TARGETD)
	gcc $(TARGETD) harness.cpp $(LIBS)

$(TARGETD): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGETD)
	$(LINK) $(LFLAGS) -o $(TARGETD) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGETD)
	-rm -f *~ core

####### Compile

qtimage.o: qtimage.cpp

