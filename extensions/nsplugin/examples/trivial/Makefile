####### Compiler, tools and options

CC	=	gcc
CFLAGS	=	-Wall -W -O2 -fno-strength-reduce -fPIC
INCPATH	=	-I$(QTDIR)/include
LINK	=	gcc
LFLAGS	=	-shared -Wl,-soname,$(TARGET)
LIBS	=	-L$(QTDIR)/lib -L/usr/X11/lib -lqnp -lqt -lXt -lX11 -lm
MOC	=	moc

####### Files

HEADERS =	
SOURCES =	trivial.cpp
OBJECTS =	trivial.o
SRCMOC	=	trivial.moc
OBJMOC	=	
TARGETD	=	trivial.so

####### Implicit rules

.SUFFIXES: .cpp .c .C

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGETD) 

install: $(TARGETD)
	cp -f $(TARGETD) $(HOME)/.netscape/plugins/$(TARGETD)

$(TARGETD): $(OBJECTS) $(OBJMOC)
	-rm -f $(TARGETD)
	$(LINK) $(LFLAGS) -o $(TARGETD) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~ core

####### Compile

trivial.o: trivial.cpp \
		trivial.moc

trivial.moc: trivial.cpp
	$(MOC) trivial.cpp -o trivial.moc

