#############################################################################
# Makefile for building targets in sub directories.
# Generated by tmake at 10:42, 2000/08/23
#     Project: designer
#    Template: subdirs
#############################################################################

MAKEFILE=	Makefile
TMAKE	=	tmake

SUBDIRS	=	util \
		uic \
		designer

all: $(SUBDIRS)

$(SUBDIRS): tmake_all FORCE
	cd $@; $(MAKE)

tmake: GNUmakefile

GNUmakefile: designer.pro
	tmake designer.pro -o GNUmakefile

tmake_all:
	for i in $(SUBDIRS); do ( if [ -d $$i ]; then cd $$i ; $(TMAKE) $$i.pro -o $(MAKEFILE); grep "TEMPLATE.*subdirs" $$i.pro 2>/dev/null >/dev/null && $(MAKE) -f $(MAKEFILE) tmake_all || true; fi; ) ; done

clean release debug:
	for i in $(SUBDIRS); do ( if [ -d $$i ]; then cd $$i ; $(MAKE) $@; fi; ) ; done

FORCE:
