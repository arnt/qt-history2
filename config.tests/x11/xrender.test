#!/bin/sh

#check for lib
XDIRS=`sed -n -e '/^QMAKE_LIBDIR_X11[	]*=/ { s/[^=]*=[	 ]*//; s/-L/ /g; p; }' $1/qmake.conf`
LIBDIRS="$XDIRS /usr/lib /lib"
FOUND_LIB=
F=
for LIBDIR in $LIBDIRS
do
  FOUND_LIB=`ls $LIBDIR/libXrender.* 2>/dev/null`
  if [ ! -z "$FOUND_LIB" ]
  then
      F=yes
      break
  fi
done
[ -z "$F" ] && exit 0

#check for headers
INCS="X11/extensions/Xrender.h"
XDIRS=`sed -n -e '/^QMAKE_INCDIR_X11[	]*=/ { s/[^=]*=[	 ]*//; s/-I/ /g; p; }' $1/qmake.conf`
INCDIRS="$XDIRS /usr/include /include"
for I in $INCS
   do
     F=
     for INCDIR in $INCDIRS
     do
        [ -f $INCDIR/$I ] && exit 1
    done
done
exit 0
