#!/bin/sh

FONTCONFIG=yes
XCONFIG=$1/qmake.conf
VERBOSE=$2
SRCDIR=$3
OUTDIR=$4
shift 4
IN_LIBDIRS=""
IN_INCDIRS=""
PARAMS=$@
for PARAM in $PARAMS; do
    PREFIX=`echo $PARAM | sed 's/^\(..\).*/\1/'`
    case $PREFIX in
    -L)
	CLIBDIR=`echo $PARAM | sed -e 's/^-L//'`
	IN_LIBDIRS="$IN_LIBDIRS $CLIBDIR"
	;;
    -I)
        CINCDIR=`echo $PARAM | sed -e 's/^-I//'`
        IN_INCDIRS="$IN_INCDIRS $CINCDIR"
        ;;
    *) ;;
    esac
done

# debuggery
[ "$VERBOSE" = "yes" ] && echo "FontConfig auto-detection... ($*)"

# cleanup...
rm -f $OUTDIR/config.tests/x11/fontconfig.cfg
rm -f $OUTDIR/config.tests/x11/fontconfig.inc
rm -f $OUTDIR/config.tests/x11/fontconfig.lib

XLIBDIRS=`sed -n -e '/^QMAKE_LIBDIR_X11[	]*=/ { s/[^=]*=[	 ]*//; s/-L/ /g; p; }' $XCONFIG`
LIBDIRS=`sed -n -e '/^QMAKE_LIBDIR[	]*=/ { s/[^=]*=[	 ]*//; s/-L/ /g; p; }' $XCONFIG`

LIBDIRS="$IN_LIBDIRS $XLIBDIRS $LIBDIRS /usr/shlib /usr/lib /lib"
XINCDIRS=`sed -n -e '/^QMAKE_INCDIR_X11[	]*=/ { s/[^=]*=[	 ]*//; s/-L/ /g; p; }' $XCONFIG`
INCDIRS=`sed -n -e '/^QMAKE_INCDIR[	]*=/ { s/[^=]*=[	 ]*//; s/-L/ /g; p; }' $XCONFIG`
INCDIRS="$IN_INCDIRS $XINCDIRS $INCDIRS /usr/include /include"

# check for freetype2 headers
FREETYPE2_INCDIR=
if [ "$FONTCONFIG" = "yes" ]; then
    INC="freetype2/freetype/freetype.h"
    F=
    for INCDIR in $INCDIRS; do
	if [ -f $INCDIR/$INC ]; then
            F=yes
            FREETYPE2_INCDIR=$INCDIR/freetype2
            [ "$VERBOSE" = "yes" ] && echo "  Found $INC in $INCDIR"
            break
	fi
    done
    if [ -z "$F" ]; then
	FONTCONFIG=no
	[ "$VERBOSE" = "yes" ] && echo "  Could not find $INC anywhere in $INCDIRS"
    fi
fi

# verify that we are using freetype2 >= 2.0.9
if [ "$FONTCONFIG" = "yes" ]; then
    FREETYPE_MAJOR=`grep "#define FREETYPE_MAJOR" $INCDIR/$INC | head -n 1 | awk '{ print \$3 }'`
    FREETYPE_MINOR=`grep "#define FREETYPE_MINOR" $INCDIR/$INC | head -n 1 | awk '{ print \$3 }'`
    FREETYPE_PATCH=`grep "#define FREETYPE_PATCH" $INCDIR/$INC | head -n 1 | awk '{ print \$3 }'`
    test -z "$FREETYPE_PATCH" && FREETYPE_PATCH="0"
    if [ "$FREETYPE_MAJOR" -eq "2" ] \
        && [ "$FREETYPE_MINOR" -ge "0" -a "$FREETYPE_PATCH" -ge "9" ] \
        || [ "$FREETYPE_MINOR" -ge "1" ]; then
        [ "$VERBOSE" = "yes" ] && \
            echo "  Found Freetype version $FREETYPE_MAJOR.$FREETYPE_MINOR.$FREETYPE_PATCH"
    else
        FONTCONFIG=no
        [ "$VERBOSE" = "yes" ] && echo "  Freetype Version >= 2.0.9 required."
    fi
fi

# check for fontconfig headers
if [ "$FONTCONFIG" = "yes" ]; then
    INC="fontconfig/fontconfig.h"
    F=
    for INCDIR in $INCDIRS; do
	if [ -f $INCDIR/$INC ]; then
	    F=yes
	    [ "$VERBOSE" = "yes" ] && echo "  Found $INC in $INCDIR"
	    break
	fi
    done
    if [ -z "$F" ]; then
	FONTCONFIG=no
	[ "$VERBOSE" = "yes" ] && echo "  Could not find $INC anywhere in $INCDIRS"
    fi
fi

# check for the Fontconfig library
LIBFONTCONFIG=
if [ "$FONTCONFIG" = "yes" ]; then
    F=
    LIBS="fontconfig"
    for LIB in $LIBS; do
        for LIBDIR in $LIBDIRS; do
            EXTENSIONS="sl so a"
            for E in $EXTENSIONS; do
                if [ -f "$LIBDIR/lib$LIB.$E" ]; then
                    F=yes
                    [ "$VERBOSE" = "yes" ] && echo "  Found lib$LIB.$E in $LIBDIR"
                    LIBFONTCONFIG="-lfreetype -l$LIB"
                    break
                fi
            done
        done
        [ -n "$F" ] && break
    done
    if [ -z "$F" ]; then
        FONTCONFIG=no
        [ "$VERBOSE" = "yes" ] && echo "  Could not find FontConfig lib anywhere in $LIBDIRS"
    fi
fi

# done
if [ "$FONTCONFIG" != "yes" ]; then
    [ "$VERBOSE" = "yes" ] && echo "FontConfig disabled."
    exit 0
else
    [ "$VERBOSE" = "yes" ] && echo "FontConfig enabled."
    echo "$FREETYPE2_INCDIR" > $OUTDIR/config.tests/x11/fontconfig.inc
    echo "$LIBFONTCONFIG" > $OUTDIR/config.tests/x11/fontconfig.lib
    exit 1
fi
