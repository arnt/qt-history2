#!/bin/sh

FVISIBILITY_SUPPORT=no
COMPILER=$1
VERBOSE=$2

cat >>mmx.c << EOF
#include <mmintrin.h>
#if defined(__GNUC__) && __GNUC__ < 4 && __GNUC_MINOR__ < 3
#error GCC < 3.2 is known to create internal compiler errors with our MMX code
#endif
EOF

$COMPILER -c -mmmx mmx.c >/dev/null 2>&1 && MMX_SUPPORT=yes
rm -f mmx.c mmx.o

# done
if [ "$MMX_SUPPORT" != "yes" ]; then
    [ "$VERBOSE" = "yes" ] && echo "mmx support disabled."
    exit 0
else
    [ "$VERBOSE" = "yes" ] && echo "mmx support enabled."
    exit 1
fi
