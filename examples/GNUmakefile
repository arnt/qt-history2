#############################################################################
# Makefile for building targets in sub directories.
# Generated by tmake at 16:00, 1999/06/03
#     Project: examples
#    Template: subdirs
#############################################################################

MAKEFILE=	Makefile
TMAKE	=	tmake

SUBDIRS	=	aclock \
		addressbook \
		application \
		buttons_groups \
		checklists \
		cursor \
		customlayout \
		dclock \
		dirview \
		dragdrop \
		drawdemo \
		drawlines \
		forever \
		hello \
		i18n \
		layout \
		life \
		lineedits \
		listbox_combo \
		listviews \
		menu \
		movies \
		picture \
		popup \
		progress \
		progressbar \
		qbrowser \
		qdir \
		qfd \
		qfileiconview \
		qiconview \
		qmag \
		qwerty \
		rangecontrols \
		richtext \
		rot13 \
		scribble \
		scrollview \
		sheet \
		showimg \
		splitter \
		tabdialog \
		table \
		tetrix \
		themes \
		tictac \
		tooltip \
		validator \
		widgets \
		wizard \
		xform

all: $(SUBDIRS)

$(SUBDIRS): FORCE
	cd $@; $(MAKE)

tmake: GNUmakefile

GNUmakefile: examples.pro
	tmake examples.pro -o GNUmakefile

tmake_all:
	for i in $(SUBDIRS); do ( cd $$i ; $(TMAKE) $$i.pro -o $(MAKEFILE); grep "TEMPLATE.*subdirs" $$i.pro 2>/dev/null >/dev/null && $(MAKE) -f $(MAKEFILE) tmake ) ; done

clean:
	for i in $(SUBDIRS); do ( cd $$i ; $(MAKE) clean ) ; done

FORCE:
