MAKEFILE=	Makefile
TMAKE	=	tmake

SUBDIRS	=	aclock \
		action \
		addressbook \
		application \
		buttongroups \
		checklists \
		cursor \
		customlayout \
		dclock \
		dirview \
		dragdrop \
		drawdemo \
		drawlines \
