####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake: GNUmakefile.debug

GNUmakefile.debug: finger.pro
	tmake finger.pro -o GNUmakefile.debug

dist:
	$(TAR) finger.tar finger.pro $(SOURCES) $(HEADERS) $(DIST)
	$(GZIP) finger.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~ core

####### Compile

.obj/debug/finger.o: finger.cpp \
		finger.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o .obj/debug/finger.o finger.cpp

.obj/debug/moc_finger.o: moc_finger.cpp \
		finger.h
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o .obj/debug/moc_finger.o moc_finger.cpp

moc_finger.cpp: finger.h
	$(MOC) finger.h -o moc_finger.cpp

