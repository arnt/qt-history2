#!/bin/sh

cat >.qmake.cache <<EOF
OBJECTS_DIR=.obj
MOC_DIR=.moc
EOF

TOP=`pwd`

# configure xbase
cd xdb-1.2.0 && ./configure --without-index-ntx --without-ui-html --without-xbase-locking --without-xbase-debug --without-memo-fields --quiet

echo creating src/Makefile
cd ../src && qmake -o Makefile src.pro
echo creating bin/Makefile
cd ../bin && qmake -o Makefile bin.pro
echo creating Makefile
cd .. && qmake -o Makefile qdb.pro
