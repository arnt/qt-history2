#!/bin/sh

if [ -z "$QTDIR" ]
then
    echo
    echo
    echo '   The environment variable $QTDIR should be set to your'
    echo '   Qt installation.'
    echo
    echo '   Please read the INSTALL file in the Qt directory for instructions'
    echo '   on how to set $QTDIR correctly. '
    echo
    echo
    exit 1
fi

if [ -z "$XBASEDIR" ]
then
XBASEDIR=../xdb
fi

cat >.qmake.cache <<EOF
OBJECTS_DIR=.obj
MOC_DIR=.moc
XBASE_ROOT=$XBASEDIR
EOF

TOP=`pwd`

echo creating src/Makefile
cd src && qmake -o Makefile src.pro && cd ..
echo creating bin/Makefile
cd bin && qmake -o Makefile bin.pro && cd ..
echo creating Makefile
qmake -o Makefile localsql.pro
