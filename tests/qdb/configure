#!/bin/sh

if [ "$1" = "--help" ]
then
    echo 'Configure Options:'
    echo
    echo '--help            This help'
    echo 
    echo 'The XBASEDIR environment variable can be used to specify'
    echo 'the location of the xbase library (default "/usr/local")'
    echo
    echo 'The XBASELIB environment variable can be used to specify'
    echo 'the name of the xbase library (default "xbase")'
    echo
    exit 0
fi

if [ -z "$QTDIR" ]
then
    echo
    echo
    echo '   The environment variable $QTDIR should be set to your'
    echo '   Qt installation.'
    echo
    echo '   Please read the INSTALL file in the Qt directory for instructions'
    echo '   on how to set $QTDIR correctly. '
    echo
    echo
    exit 1
fi

if [ -z "$XBASEDIR" ]
then
XBASEDIR=/usr/local
fi

if [ -z "$XBASELIB" ]
then
XBASELIB=xbase
fi

cat >.qmake.cache <<EOF
OBJECTS_DIR=.obj
MOC_DIR=.moc
XBASE_ROOT=$XBASEDIR
XBASE_LIB=$XBASELIB
EOF

TOP=`pwd`

echo creating src/Makefile
cd src && qmake -o Makefile src.pro && cd ..
echo creating bin/Makefile
cd bin && qmake -o Makefile bin.pro && cd ..
echo creating Makefile
qmake -o Makefile localsql.pro
