#!/bin/sh

cat >.qmake.cache <<EOF
OBJECTS_DIR=.obj
MOC_DIR=.moc
EOF

TOP=`pwd`

# configure xbase
cd xdb-1.2.0 && ./configure --enable-static --without-index-ntx --without-expressions --without-ui-html --without-xbase-locking --without-xbase-debug --without-memo-fields --quiet --libdir $TOP/lib

echo creating src/Makefile
cd ../src && qmake -o Makefile src.pro
echo creating bin/Makefile
cd ../bin && qmake -o Makefile bin.pro
echo creating Makefile
cd .. && qmake -o Makefile qdb.pro
