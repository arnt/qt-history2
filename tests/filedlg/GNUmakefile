####### Compiler, tools and options

CC	=	gcc
CXX	=	g++
CFLAGS	=	-pipe -Wall -W -O2 -DNO_DEBUG
CXXFLAGS=	-pipe -Wall -W -O2 -DNO_DEBUG
INCPATH	=	-I../../extensions/network/src -I$(QTDIR)/include
LINK	=	g++
LFLAGS	=	
LIBS	=	-L$(QTDIR)/lib -lqt -L/usr/X11R6/lib -lXext -lX11 -lm -lqnetwork
MOC	=	moc

TAR	=	tar -cf
GZIP	=	gzip -9f

####### Files

HEADERS =	filedlg.h
SOURCES =	filedlg.cpp
OBJECTS =	filedlg.o
SRCMOC	=	moc_filedlg.cpp
OBJMOC	=	moc_filedlg.o
DIST	=	
TARGET	=	filedlg

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake: GNUmakefile

GNUmakefile: filedlg.pro
	tmake filedlg.pro -o GNUmakefile

dist:
	$(TAR) filedlg.tar filedlg.pro $(SOURCES) $(HEADERS) $(DIST)
	$(GZIP) filedlg.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~ core

####### Compile

filedlg.o: filedlg.cpp \
		filedlg.h

moc_filedlg.o: moc_filedlg.cpp \
		filedlg.h

moc_filedlg.cpp: filedlg.h
	$(MOC) filedlg.h -o moc_filedlg.cpp

