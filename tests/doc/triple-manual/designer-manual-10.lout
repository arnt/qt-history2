@Chapter
    @Title { Reference: Key Bindings }
    @Tag { reference.key.bindings }
@Begin
@LP
@Tbl
    aformat { @Cell font { Helvetica Base -1p } A | @Cell B }
{
    @Rowa A { Ctrl+A } B { Selects keypresses.qt.designer @Index{ Keypresses (Qt Designer) } all GUI elements in the active form.}
    @Rowa A { Ctrl+B } B { Breaks the selected layout so that you can add or delete GUI elements.}
    @Rowa A { Ctrl+C } B { Copies the selected GUI elements from the active form into the clipboard.}
    @Rowa A { Alt+E } B { Pulls down the @Option{Edit} menu.}
    @Rowa A { Alt+F } B { Pulls down the @Option{File} menu.}
    @Rowa A { Ctrl+G } B { Applies a grid layout to the selected container, or creates a new container containing the selected GUI elements and applies a grid layout to this container.}
    @Rowa A { Ctrl+H } B { Applies a horizontal box layout to the selected container, or creates a new container containing the selected GUI elements and applies a horizontal box layout to this container.}
    @Rowa A { Alt+H } B { Pulls down the @Option{Help} menu.}
    @Rowa A { Ctrl+J } B { Adjusts the size of the selected GUI element (or elements) so that it has the minimal size needed for displaying itself properly.}
    @Rowa A { Ctrl+L } B { Applies a vertical box layout to the selected container, or creates a new container containing the selected GUI elements and applies a vertical box layout to this container.}
    @Rowa A { Alt+L } B { Pulls down the @Option{Layout} menu.}
    @Rowa A { Ctrl+M } B { Opens an online version of this manual in Qt Assistant.}
    @Rowa A { Ctrl+N } B { Invokes the @Win{New File} dialog.}
    @Rowa A { Ctrl+O } B { Invokes the @Win{Open File} dialog.}
    @Rowa A { Alt+P } B { Pulls down the @Option{Preview} menu.}
    @Rowa A { Ctrl+R } B { Checks the accelerators in the active form for duplicates.}
    @Rowa A { Ctrl+S } B { Saves the active form.}
    @Rowa A { Ctrl+T } B { Previews the active form in the default GUI style of the platform.}
    @Rowa A { Alt+T } B { Pulls down the @Option{Tools} menu.}
    @Rowa A { Ctrl+V } B { Pastes the GUI element (or elements) in the clipboard into the active form at the position it had in its original form plus a little offset. Does nothing if the clipboard does not contain a GUI element.}
    @Rowa A { Alt+W } B { Pulls down the @Option{Window} menu.}
    @Rowa A { Ctrl+X } B { Cuts the selected GUI element (or elements) from the active form and puts it into the clipboard.}
    @Rowa A { Ctrl+Y } B { Redoes the last undo action.}
    @Rowa A { Ctrl+Z } B { Undoes the last action.}
    @Rowa A { Del } B { Deletes the selected GUI elements from the active form.}
    @Rowa A { F1 } B { Opens the introductory page of the Qt Designer manual in @QAT.}
    @Rowa A { Shift+F1 } B { Turns on What's This mode, which lets you click on a GUI element in Qt Designer to get a small description window for this element.}
    @Rowa A { F2 } B { Activates the pointer tool that lets you select GUI elements.}
    @Rowa A { F3 } B { Activates the connection tool that lets you edit the connections between signals and slots in a form.}
    @Rowa A { F4 } B { Activates the tab order tool that lets you change the tab order of the GUI elements on the active form.}
    @Rowa A { Ctrl+F4 } B { Closes the active window.}
    @Rowa A { Ctrl+F6 } B { Activates the next window in the order of window creation.}
    @Rowa A { Ctrl+Shift-F6 } B { Activates the previous window in the order of window creation.}
}
@End @Chapter
