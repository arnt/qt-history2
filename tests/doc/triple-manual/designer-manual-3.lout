        int r = color.red();
        int g = color.green();
        int b = color.blue();
@End @RawVerbatim
@LD @Code @RawVerbatim @Begin
        statusBar()->message( QString( "%1 \"%2\" (%3,%4,%5)%6 {%7 %8 %9}" ).
