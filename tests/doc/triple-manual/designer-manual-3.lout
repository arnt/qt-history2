@End @RawVerbatim
@LD @Code @RawVerbatim @Begin
        if ( ! text.isNull() ) {
            QColor color = m_colors[text];
            switch ( m_clip_as ) {
                case CLIP_AS_HEX: text = color.name(); break;
                case CLIP_AS_NAME: break;
