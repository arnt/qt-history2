# lout -EPS ftppath.lout > ftppath.eps
@SysInclude { tbl }
@SysInclude { diag }
@SysInclude { picture }
@Illustration
    @InitialFont { Helvetica Base 13p }
{
@Diag
    aoutlinestyle {noline}
    amargin {0.1c}
    afont { Courier Base 13p }
    boutlinestyle {noline}
    bmargin {0.1c}
    bfont { Helvetica Base 13p }
{
A:: @ANode{darkblue @Colour{"ftp://ftp.example.com/pub/something/"}}
//0.8c
|7.3c {B:: @BNode{path}}
//
darkgreen @Colour {
@VHVCurve from{B@N} to {A@S ++{0.08,0}} radius{0.25f}
@VHVCurve from{B@N} to {A@SE --{0.02,0}} radius{0.25f}
}
}
}
