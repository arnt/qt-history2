# lout -EPS mailtopath.lout > mailtopath.eps
@SysInclude { tbl }
@SysInclude { diag }
@SysInclude { picture }
@Illustration
    @InitialFont { Helvetica Base 13p }
{
@Diag
    aoutlinestyle {noline}
    amargin {0.1c}
    afont { Courier Base 13p }
    boutlinestyle {noline}
    bmargin {0.1c}
    bfont { Helvetica Base 13p }
{
A:: @ANode{darkblue @Colour{"mailto:postmaster@example.com"}}
//0.8c
|4.5c {B:: @BNode{path}}
//
darkgreen @Colour {
@VHVCurve from{B@N} to {A@SW ++{0.245,0}} radius{0.25f}
@VHVCurve from{B@N} to {A@SE --{0.01,0}} radius{0.25f}
}
}
}
