####### Compiler, tools and options

CC	=	g++
CFLAGS	=	-pipe -Wall -W -g -O -fno-strength-reduce
INCPATH	=	-I$(QTDIR)/include
LINK	=	g++
LFLAGS	=	
LIBS	=	-L$(QTDIR)/lib -lqt -L/usr/X11R6/lib -lX11 -lXext
MOC	=	moc

TAR	=	tar -cf
GZIP	=	gzip -9f

####### Files

HEADERS =	qml.h
SOURCES =	qml.cpp
OBJECTS =	qml.o
SRCMOC	=	moc_qml.cpp
OBJMOC	=	moc_qml.o
DIST	=	
TARGET	=	qml

####### Implicit rules

.SUFFIXES: .cpp .cxx .cc .C .c

.cpp.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.cxx.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.cc.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.C.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

.c.o:
	$(CC) -c $(CFLAGS) $(INCPATH) -o $@ $<

####### Build rules

all: $(TARGET)

$(TARGET): $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)

moc: $(SRCMOC)

tmake: Makefile

Makefile: qml.pro
	tmake qml.pro -o Makefile

dist:
	$(TAR) qml.tar qml.pro $(SOURCES) $(HEADERS) $(DIST)
	$(GZIP) qml.tar

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(TARGET)
	-rm -f *~ core

####### Compile

qml.o: qml.cpp \
		qml.h

moc_qml.o: moc_qml.cpp \
		qml.h

moc_qml.cpp: qml.h
	$(MOC) qml.h -o moc_qml.cpp

